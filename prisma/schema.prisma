generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserPicture {
  JESSICA
  MAX
  FELIX
  BARSIK
}

enum NoteType {
  LIGHT
  MEDIUM
  HARD
  MEDICINE
  TEMPERATURE
}

enum MedProcedureType {
  APPOINTMENT
  EXAMINATION
  VACCINATION
}

enum Gender {
  MALE
  FEMALE
}

enum Unit {
  DAY
  WEEK
  MONTH
  YEAR
}

model User {
  id           Int            @id @default(autoincrement())
  name         String         @db.VarChar(50)
  birthDate    DateTime       @db.Date
  gender       Gender
  email        String         @unique @db.VarChar(100)
  password     String         @db.VarChar(256)
  picture      UserPicture    @default(JESSICA)
  note         Note[]
  medProcedure MedProcedure[]
  appointment  Appointment[]
}

model Note {
  id          Int      @id @default(autoincrement())
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  startedAt   DateTime
  name        String   @db.VarChar(32)
  comment     String?  @db.VarChar(128)
  type        NoteType
  temperature Float?
}

model MedProcedure {
  id        Int              @id @default(autoincrement())
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  frequency Int
  type      MedProcedureType
  lastVisit DateTime         @db.Date
  name      String           @unique @db.VarChar(32)
}

model MedProcedureTemplate {
  id         Int              @id @default(autoincrement())
  type       MedProcedureType
  frequency  Int
  unit       Unit
  categoryId Int?
  category   Category?        @relation(fields: [categoryId], references: [id])
}

model Category {
  id                    Int                    @id @default(autoincrement())
  ageLeft               Int
  ageRight              Int
  gender                Gender
  medProcedureTemplates MedProcedureTemplate[]
}

model Appointment {
  id        Int              @id @default(autoincrement())
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  name      String           @db.VarChar(32)
  type      MedProcedureType
  startedAt DateTime
  comment   String?          @db.VarChar(128)
}

model Advice {
  id          Int    @id @default(autoincrement())
  description String @db.VarChar(128)
}
